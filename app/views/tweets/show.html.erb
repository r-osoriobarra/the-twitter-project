<% if user_signed_in? %>
    <div class="container text-light">
        <h1><%= "#{@tweet.user}" %></h1>
            <div class="row bg-light text-dark rounded-pill">
                <div class="col p-0 m-0">
                    <%= image_tag @tweet.user.photo, class:'img-show-logged' %>
                </div>
                <div class="col pt-3">
                    <h4>Comment</h4>
                    <%= @tweet.content %>
                </div> 
                <div class="col pt-3">
                    <h4>Publicated </h4>
                    <p></p><%=time_ago_in_words(@tweet.created_at)%> ago
                </div>
                <div class="col pt-3">
                    <h4>Likes</h4>
                    <%= @tweet.like_count %>
                </div>
            </div>

        <h5 class="mt-3 font-weight-bold">Users who likes this tweet</h5>
        <% Tweet.liker_users(@tweet, @users).each do |user|%>
            <%= image_tag user.photo , class:'img-show-logged-followers' %>
        <% end %>
    </div>

    <div class="container my-4"><%= link_to 'Back to Tweets', root_path %></div>
<% end %>    