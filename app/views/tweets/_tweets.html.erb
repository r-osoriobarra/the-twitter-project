<h1>All Tweets</h1>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>User Photo</th>
            <th>Content</th>
            <th>N Likes</th>
            <th>N Retweets</th>
        </tr>
    </thead>
    <tbody>
        <% tweets.each do |tweet| %>
        <tr>
            <td><%= tweet.id %></td>
            <td><%= image_tag tweet.user.photo, class:' img-fluid rounded-circle size:50x50' %></td>
            <td><%= tweet.content %></td>
            <td><%= tweet.count_likes %></td>
            <td><%= Tweet.count_retweets(tweet) %></td>
            <% if user_signed_in? %>
                <% if tweet.liked?(current_user) %>
                    <td><%= link_to 'Dislike', create_like_path(tweet), method: :delete %></td>
                <% else %>
                    <td><%= link_to 'Like', destroy_like_path(tweet), method: :post %></td>
                <% end %>
                <td><%= link_to 'Retweet', create_retweet_path(tweet) ,method: :post %></td>
            <% else %>
                <td><%= link_to 'Like', new_user_session_path %></td>
                <td><%= link_to 'Retweet', new_user_session_path %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

